<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:paddingBottom="10dp"
android:paddingTop="30dp"
tools:layout_editor_absoluteY="25dp">

<ImageView
    android:id="@+id/imageView"
    android:layout_width="63dp"
    android:layout_height="64dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="24dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/bg_addtask" />

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="20dp"
    android:text="添加"
    android:textColor="@color/colorPrimary"
    android:textSize="36sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.776"
    app:layout_constraintStart_toStartOf="@+id/guideline"
    app:layout_constraintTop_toTopOf="parent" />

<EditText
    android:id="@+id/edit_addDialog_name"
    style="@style/edit_add_dialog"
    android:layout_width="155dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:enabled="false"
    android:ems="10"
    android:hint="任务名"
    app:layout_constraintStart_toStartOf="@+id/guideline"
    app:layout_constraintTop_toTopOf="@+id/guideline2" />

<EditText
    android:id="@+id/edit_addDialog_idx"
    style="@style/edit_add_dialog"
    android:layout_width="60dp"
    android:enabled="false"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="8dp"
    android:ems="10"
    android:hint="编号"
    android:inputType="number"
    android:textAlignment="center"
    app:layout_constraintBottom_toBottomOf="@+id/edit_addDialog_name"
    app:layout_constraintStart_toEndOf="@+id/edit_addDialog_name"
    app:layout_constraintTop_toTopOf="@+id/edit_addDialog_name"
    app:layout_constraintVertical_bias="1.0" />

<ImageView
    android:id="@+id/img_addDialog_tag"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="20dp"
    android:tint="@color/colorPrimary"
    app:layout_constraintEnd_toEndOf="@+id/edit_addDialog_idx"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="@+id/edit_addDialog_idx"
    app:layout_constraintTop_toBottomOf="@+id/edit_addDialog_idx"
    app:srcCompat="@drawable/icon_tag" />

<EditText
    android:id="@+id/edit_addDialog_category"
    style="@style/edit_add_dialog"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:ems="10"
    android:focusable="false"
    android:hint="类别"
    android:inputType="none"
    android:singleLine="true"
    app:layout_constraintEnd_toEndOf="@+id/edit_addDialog_name"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="@+id/edit_addDialog_name"
    app:layout_constraintTop_toBottomOf="@+id/edit_addDialog_name" />

<EditText
    android:id="@+id/edit_addDialog_tag"
    style="@style/edit_add_dialog"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="17dp"
    android:ems="10"
    android:focusable="false"
    android:hint="标签"
    android:inputType="text"
    android:singleLine="true"
    app:layout_constraintEnd_toEndOf="@+id/edit_addDialog_category"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="@+id/edit_addDialog_category"
    app:layout_constraintTop_toBottomOf="@+id/edit_addDialog_category" />

<Button
    android:id="@+id/btn_addDialog_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="112dp"
    android:background="@null"
    android:text="取消"
    android:textColor="@color/colorPrimary"
    app:layout_constraintBottom_toBottomOf="@+id/btn_addDialog_ensure"
    app:layout_constraintEnd_toStartOf="@+id/btn_addDialog_ensure"
    app:layout_constraintTop_toTopOf="@+id/btn_addDialog_ensure"
    app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_addDialog_ensure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:text="确定"
        android:textColor="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

<android.support.constraint.Guideline
    android:id="@+id/guideline"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_begin="79dp" />

<android.support.constraint.Guideline
    android:id="@+id/guideline2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="90dp" />

<android.support.constraint.Guideline
    android:id="@+id/guideline3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="236dp" />

</android.support.constraint.ConstraintLayout>
